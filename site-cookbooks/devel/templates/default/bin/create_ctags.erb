#!/bin/bash

tmpfile='_tags'
tagfile='<%= node['ctags']['file'] %>'

touch $HOME/$tagfile $HOME/$tmpfile

ctags --exclude=.git --exclude=node_modules --exclude=.bundle --exclude=tmp --exclude=log -Rf $HOME/$tmpfile <%= node['ctags']['directories'].join(' ') %>

rm $HOME/$tagfile
mv $HOME/$tmpfile $HOME/$tagfile
